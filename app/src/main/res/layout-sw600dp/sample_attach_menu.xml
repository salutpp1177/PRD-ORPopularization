<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attach_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/tutorial_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_tutorial"
        android:clickable="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/newgame_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/button_newgame"
        android:clickable="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/game_explain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_speaker_notes_black_24dp" />


</LinearLayout>
